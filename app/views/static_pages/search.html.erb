<div class="container">
	<div class="fixed"><%= form_with scope: :flickr, url: root_path, method: :get, local: true do |f| %>
    <%= f.label "User ID:" %>
    <%= f.text_field :id, value: "3839885270", name: "id" %>
    <%= f.submit "Search"%>
<% end %> </div>


<div class="flex-item"><% if @photos&.any? %>
	<% @photos.each do |p| %>
    <%= image_tag p[0] %>
    <p>Title: <%= p[1] %></p>
    <% end %></div>
<% end %>
</div>